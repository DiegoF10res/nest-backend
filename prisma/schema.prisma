datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  name String?
  email String? @unique
  password String?
  active Boolean? @default(true)
  sales Sale[]
}

model Sale {
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  userId Int
  branchId Int
  user User @relation(fields: [userId], references: [id])
  branch Branch @relation(fields: [branchId], references: [id])
  details SaleDetail[]
  total Float
}

model SaleDetail {
  id Int @id @default(autoincrement())
  saleId Int
  productId Int
  quantity Int
  price Float
  sale Sale @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Branch {
  id Int @id @default(autoincrement())
  name String
  address String
  sales Sale[]
}

model Provider {
  id Int @id @default(autoincrement())
  name String
  contactInfo String
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())
  name String
  price Float
  stock Int
  providerId Int
  provider Provider @relation(fields: [providerId], references: [id])
  sales SaleDetail[]

}
